set completion-group-fg         "#4e5157" # Comment
set completion-highlight-bg     "#191919" # Selection
set completion-highlight-fg     "#e6eaea" # Foreground

set index-bg                    "#152528" # Background
set index-fg                    "#e6eaea" # Foreground
